  my $result = 0;

  if ( $sensor ne '' ) {
    print STDERR "\nRedundant SENSOR option\n";
  } else {
    $sensor = $value;
    my $is_valid = $sensor > 0;

    if ( ! $is_valid ) {
      print STDERR "\nInvalid SENSOR option (require integer > 0)\n";
    } else {
      $result = 1;
    }
  }

  return $result;
}



